{
	"tasks": [
		{
			"label": "make all files",
			"command": "make",
			"args": ["-C", "${workspaceFolder}"],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": "build"
		},
		{
			"label": "make clean",
			"command": "make",
			"args": ["clean", "-C", "${workspaceFolder}"],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": "build"
		},
		{
			"label": "run main",
			"command": "main",
			"args": ["input.py"],
			"group": "build"
		},
		{
			"label": "make and run",
			"dependsOn": ["make clean", "make all files", "run main"],
			"dependsOrder": "sequence"
		},
		{
			"label": "make all test files",
			"command": "make",
			"args": ["-C", "${workspaceFolder}/test"]
		}
	],
	"version": "2.0.0"
}
